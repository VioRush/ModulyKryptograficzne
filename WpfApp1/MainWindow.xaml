        <Label Content="Tekst:" HorizontalAlignment="Left" Margin="40,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Klucz:" HorizontalAlignment="Left" Margin="43,187,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Klucz" HorizontalAlignment="Left" Height="23" Margin="98,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="613"/>
        <Label Content="Wynik" HorizontalAlignment="Left" Margin="43,298,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TekstWynikowy" HorizontalAlignment="Left" Height="60" Margin="98,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="613"/>
        <Button Content="Zaszyfruj (Rail Fence)" HorizontalAlignment="Left" Margin="43,236,0,0" VerticalAlignment="Top" Width="133" Click="RailFence_button"/>
        <Button Content="Deszyfruj (Rail Fence)" HorizontalAlignment="Left" Margin="43,261,0,0" VerticalAlignment="Top" Width="133" Click="RailFenceDeszyfrowanie_button"/>
        <Button Content="Zaszyfruj (Vigenere)" HorizontalAlignment="Left" Margin="181,236,0,0" VerticalAlignment="Top" Width="133" Click="Vigenere_button"/>
        <Button Content="Deszyfruj (Vigenere)" HorizontalAlignment="Left" Margin="181,261,0,0" VerticalAlignment="Top" Width="133" Click="VigenereDeszyfrowanie_button"/>
