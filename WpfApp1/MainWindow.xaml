        <Button Content="Deszyfruj (Przestawienie A)" HorizontalAlignment="Left" Margin="322,261,0,0" VerticalAlignment="Top" Width="148" Click="PrzestawienieADeszyfrowanie_button"/>
        <Button Content="Zaszyfruj (Przestawienie C)" HorizontalAlignment="Left" Margin="475,236,0,0" VerticalAlignment="Top" Width="148" Click="PrzestawienieC_button"/>
        <Button Content="Deszyfruj (Przestawienie C)" HorizontalAlignment="Left" Margin="475,261,0,0" VerticalAlignment="Top" Width="148" Click="PrzestawienieCDeszyfrowanie_button"/>
